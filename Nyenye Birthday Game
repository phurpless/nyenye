<script>
  let game = 1;
  let wrongAttempts = {};

  function nextGame() {
    document.getElementById('game' + game)?.classList.remove('active');
    game++;
    if (document.getElementById('game' + game)) {
      document.getElementById('game' + game).classList.add('active');
    } else {
      document.getElementById('final').classList.add('active');
    }
  }

  function showMsg(id, msg) {
    document.getElementById('msg' + id).innerText = msg;
  }

  function checkGuess() {
    const val = parseInt(document.getElementById('guess1').value);
    if (val === 21) {
      showMsg(1, "AWOWKOWOKWK IYAA SAYANGG BB BENARRR");
      setTimeout(nextGame, 1300);
    } else {
      showMsg(1, "III NOO BUKANN ITUU SAYANGGKUU CLUENYA UMUR BB");
    }
  }

  function quiz(id, correct) {
    if (!wrongAttempts[id]) wrongAttempts[id] = 0;

    if (correct) {
      showMsg(id, "AWOWKOWOKWK IYAA SAYANGG BB BENARRR");
      setTimeout(() => {
        nextGame();
        wrongAttempts[id] = 0;
      }, 1300);
    } else {
      wrongAttempts[id]++;
      if (wrongAttempts[id] === 2) {
        showMsg(id, "APASII KENAPAAA BEBE PILIH ITUU");
      } else {
        showMsg(id, "III NOO BUKANN ITUU SAYANGGKUU");
      }
    }
  }
</script>

